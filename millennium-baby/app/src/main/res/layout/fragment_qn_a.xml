<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    tools:context=".QnAFragment"
    android:background="@drawable/major_recently_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문과 답변"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="@color/purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_marginRight="10dp"
            android:textColor="@color/brown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 TIPS"
            android:textColor="@color/brown"/>

        <Button
            android:id="@+id/intoQnAPage"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:text="더보기"
            android:textStyle="bold"
            android:textColor="@color/DBrown"
            android:background="@color/MSalgoo"
            android:layout_marginLeft="65dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/major_recently"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        tools:listitem="@layout/item_recently_qna"/>




</FrameLayout>