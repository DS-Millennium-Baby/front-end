<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:padding="15dp"
    android:background="@drawable/box_realwhite"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_tip_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textFontWeight="700"
            android:textSize="20dp"
            android:textColor="@color/DBrown"
            android:text="제목"/>
        <TextView
            android:id="@+id/item_tip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="700"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:text="작성날짜"/>
    </LinearLayout>
    <!--사용자 전공 정보-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/item_tip_firstmajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:text="제1전공" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:text=" | " />
        <TextView
            android:id="@+id/item_tip_secondmajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:text="제2전공" />
    </LinearLayout>
    <!--내용-->
    <TextView
        android:id="@+id/item_tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용이 들어가는 부분입니다."
        android:textColor="@color/brown"
        android:textSize="13dp"
        android:maxLines="3"
        android:ellipsize="end"/>
</LinearLayout>