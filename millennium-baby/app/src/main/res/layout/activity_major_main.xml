<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MajorMainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/realwhite" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/major_head_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/major_head_btn"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="경영학전공"
        android:textColor="@color/DBrown"
        android:textSize="20dp"
        android:textStyle="bold">

    </Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/major_recently_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/major_recently_qna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="질문과 답변"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/purple"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/brown"/>

                        <TextView
                            android:id="@+id/major_recently_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="추천 TIPS"
                            android:textColor="@color/brown"/>

                        <Button
                            android:id="@+id/intoQnAPage"
                            android:layout_width="45dp"
                            android:layout_height="20dp"
                            android:text="더보기"
                            android:textStyle="bold"
                            android:textColor="@color/DBrown"
                            android:background="@color/MSalgoo"
                            android:layout_marginLeft="65dp"/>

                    </LinearLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/major_head_qna"
                        android:layout_width="260dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/major_recently_background"></androidx.viewpager2.widget.ViewPager2>

                </LinearLayout>



