<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MajorMainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major_head"
        android:background="@color/realwhite">

        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/major_head_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/major_head_btn"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="경영학전공"
            android:textColor="@color/DBrown"
            android:textSize="20dp"
            android:textStyle="bold">

        </Button>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/major_head_qna"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            >


        </androidx.viewpager2.widget.ViewPager2>


    </ScrollView>





</RelativeLayout >